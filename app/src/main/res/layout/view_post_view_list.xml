<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:fresco="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginLeft="@dimen/dp10"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:weightSum="1">

        <RelativeLayout
            android:layout_width="60dp"
            android:background="@drawable/ic_circle_80"
            android:layout_height="60dp">
            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/iv_user1"
                android:layout_width="@dimen/dp50"
                app:placeholderImage="@mipmap/ic_logo"
                android:layout_centerInParent="true"
                android:layout_height="@dimen/dp50"
                fresco:progressBarAutoRotateInterval="1000"
                fresco:roundAsCircle="true"/>

            <ProgressBar
                android:id="@+id/pb_image"
                android:layout_width="@dimen/dp15"
                android:layout_height="@dimen/dp15"
                android:layout_centerInParent="true" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.85"
            android:gravity="center_vertical">

            <com.ozonetech.ozogram.customeview.TypeTextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:paddingLeft="@dimen/dp10"
                android:paddingRight="@dimen/dp5"
                android:text="Rahul Vh"
                android:textColor="@color/colorBlack"
                android:textSize="16dp"
                app:custom_font="@string/app_font_regular">

            </com.ozonetech.ozogram.customeview.TypeTextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.15"
            android:gravity="center">

            <ImageView
                android:layout_width="@dimen/dp20"
                android:layout_height="@dimen/dp20"
                android:background="@drawable/ic_more_new">

            </ImageView>
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@drawable/gray_line">

    </View>
    <ImageView
        android:id="@+id/iv_more"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="2dp"
        android:background="@drawable/ic_post_temp"
        android:layout_weight=".65"></ImageView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp50"
            android:gravity="center_vertical"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp10"
                android:layout_weight=".1"
                android:gravity="center">

                <ImageView
                    android:id="@+id/iv_heart"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/selected_heart"
                    app:tint="@color/colorBlack">

                </ImageView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp10"
                android:layout_weight=".1"
                android:gravity="center">

                <ImageView
                    android:id="@+id/iv_commit"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/ic_chat">

                </ImageView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp10"
                android:layout_weight=".1"
                android:gravity="center">

                <ImageView
                    android:id="@+id/iv_share"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:backgroundTint="@color/colorBlack"
                    android:background="@drawable/ic_rocket">

                </ImageView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight=".4"
                android:layout_height="match_parent">

                <me.relex.circleindicator.CircleIndicator
                    android:id="@+id/circle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center|bottom"
                    android:layout_margin="@dimen/dp5"
                    android:visibility="visible"
                    app:ci_drawable="@drawable/white_circle"
                    app:ci_drawable_unselected="@drawable/white_circle" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/dp10"
                android:layout_weight=".3"
                android:gravity="right|center">

                <ImageView
                    android:id="@+id/iv_tag"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginRight="@dimen/dp10"
                    android:backgroundTint="@color/colorBlack"
                    android:background="@drawable/ic_tag">

                </ImageView>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <com.ozonetech.ozogram.customeview.TypeTextView
        android:layout_width="match_parent"
        android:layout_margin="@dimen/dp5"
        android:text="Test Message Test Message Test Message Test Message Test Message Test Message Test Message "
        android:layout_height="wrap_content">

    </com.ozonetech.ozogram.customeview.TypeTextView>
</LinearLayout>
